    </div>
    
    <div id="notification"></div>
    
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let player = { balance: 100, inventory: ['house'], activeCue: 'house' };
        let gameState = { balls: [], cueBall: null, aimAngle: 0, power: 0, charging: false };
        let canvas, ctx;
        
        const CUES = {
            house: { name: 'House Cue', price: 0, aimAssist: 0, weight: 18 },
            breaking: { name: 'Breaking Cue', price: 2, aimAssist: 0, weight: 21 },
            sp1: { name: 'Starter Cue', price: 1, aimAssist: 0.01, weight: 19 },
            sp2: { name: 'Apprentice Cue', price: 2, aimAssist: 0.015, weight: 19 },
            sp3: { name: 'Club Cue', price: 3, aimAssist: 0.02, weight: 19.5 },
            sp4: { name: 'League Cue', price: 4, aimAssist: 0.025, weight: 19.5 },
            sp5: { name: 'Challenger Cue', price: 5, aimAssist: 0.03, weight: 20 },
            pro5: { name: 'Professional Cue', price: 5, aimAssist: 0.03, weight: 20 },
            pro6: { name: 'Elite Cue', price: 6, aimAssist: 0.035, weight: 20 },
            pro7: { name: 'Master Cue', price: 7, aimAssist: 0.04, weight: 20.5 },
            pro8: { name: 'Champion Cue', price: 8, aimAssist: 0.045, weight: 20.5 },
            pro9: { name: 'Grandmaster Cue', price: 9, aimAssist: 0.05, weight: 21 },
            pro10: { name: 'Legend Cue', price: 10, aimAssist: 0.06, weight: 21 }
        };
        
        socket.on('registered', (data) => {
            player = data.player;
            updateUI();
            showNotification('Welcome to Real Billiards!');
        });
        
        socket.on('purchaseComplete', (data) => {
            player.balance = data.newBalance;
            player.inventory = data.inventory;
            updateUI();
            showNotification('Purchased: ' + data.cue.name);
            showShop();
        });
        
        socket.on('cueSelected', (data) => {
            player.activeCue = data.cue.id;
            showNotification('Equipped: ' + data.cue.name);
            showShop();
        });
        
        socket.on('matchFound', (data) => {
            showNotification('Match found! Starting...');
            setTimeout(() => startGame(), 1000);
        });
        
        socket.on('error', (data) => showNotification(data.message));        
      function updateUI() {
            document.getElementById('balance').textContent = '$' + player.balance;
        }
        
        function showNotification(msg) {
            const n = document.getElementById('notification');
            n.textContent = msg;
            n.style.display = 'block';
            setTimeout(() => n.style.display = 'none', 3000);
        }
        
        function findMatch() {
            socket.emit('findMatch', { tier: 'amateur', username: player.username });
            showNotification('Finding match...');
        }
        
        function joinTier(tier) {
            if (tier !== 'amateur' && !player.inventory.includes('breaking')) {
                showNotification('Need Breaking Cue ($2) for this tier!');
                return;
            }
            socket.emit('findMatch', { tier, username: player.username });
        }
        
        function showShop() {
            const list = document.getElementById('shopList');
            list.innerHTML = '';
            
            Object.keys(CUES).forEach(key => {
                if (key === 'house') return;
                const cue = CUES[key];
                const owned = player.inventory.includes(key);
                const selected = player.activeCue === key;
                
                const item = document.createElement('div');
                item.className = 'cue-item' + (owned ? ' owned' : '') + (selected ? ' selected' : '');
                item.innerHTML = `
                    <div>
                        <strong>${cue.name}</strong><br>
                        <small>Aim: ${(cue.aimAssist*100).toFixed(1)}% | Weight: ${cue.weight}oz</small>
                    </div>
                    <div class="cue-price">${owned ? (selected ? '‚úì Active' : 'Owned') : '$'+cue.price}</div>
                `;
                item.onclick = () => owned ? selectCue(key) : buyCue(key);
                list.appendChild(item);
            });
            
            document.getElementById('shopModal').style.display = 'block';
        }
        
        function closeShop() { document.getElementById('shopModal').style.display = 'none'; }
        function buyCue(id) { socket.emit('purchaseEquipment', { cueId: id }); }
        function selectCue(id) { socket.emit('selectCue', { cueId: id }); }
        
        function startGame() {
            document.getElementById('mainMenu').style.display = 'none';
            document.getElementById('gameCanvas').style.display = 'block';
            
            canvas = document.getElementById('canvas');
            ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            initBalls();
            setupControls();
            gameLoop();
        }
        
        function initBalls() {
            const cx = canvas.width / 2;
            const cy = canvas.height / 2;
            
            gameState.balls = [];
            gameState.balls.push({ id: 0, type: 'cue', x: cx - 200, y: cy, vx: 0, vy: 0, r: 12 });
            
            let id = 1;
            for (let row = 0; row < 5; row++) {
                for (let col = 0; col <= row; col++) {
                    const x = cx + 200 + row * 20;
                    const y = cy + (col - row/2) * 20;
                    let type = id === 8 ? 'eight' : (id < 8 ? 'solid' : 'stripe');
                    gameState.balls.push({ id: id++, type, number: id-1, x, y, vx: 0, vy: 0, r: 12 });
                }
            }
            gameState.cueBall = gameState.balls[0];
        }
        
        function setupControls() {
            let aiming = false;
            let powerInterval;
            
            canvas.addEventListener('mousedown', (e) => {
                aiming = true;
                updateAim(e);
            });
            
            canvas.addEventListener('mousemove', (e) => {
                if (aiming) updateAim(e);
            });
            
            canvas.addEventListener('mouseup', () => {
                if (aiming) {
                    aiming = false;
                    startCharging();
                }
            });
            
            function updateAim(e) {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const dx = x - gameState.cueBall.x;
                const dy = y - gameState.cueBall.y;
                gameState.aimAngle = Math.atan2(dy, dx);
            }
            
            function startCharging() {
                gameState.charging = true;
                gameState.power = 0;
                powerInterval = setInterval(() => {
                    if (gameState.power < 100) {
                        gameState.power += 2;
                        document.getElementById('powerFill').style.width = gameState.power + '%';
                    } else {
                        shoot();
                    }
                }, 20);
                
                setTimeout(() => {
                    if (gameState.charging) shoot();
                }, 2000);
            }
            
            function shoot() {
                clearInterval(powerInterval);
                gameState.charging = false;
                
                const power = gameState.power / 100 * 15;
                const cue = CUES[player.activeCue];
                const weightFactor = 18 / cue.weight;
                
                gameState.cueBall.vx = Math.cos(gameState.aimAngle) * power * weightFactor;
                gameState.cueBall.vy = Math.sin(gameState.aimAngle) * power * weightFactor;
                
                document.getElementById('powerFill').style.width = '0%';
                gameState.power = 0;
            }
        }
        
        function gameLoop() {
            updatePhysics();
            render();
            requestAnimationFrame(gameLoop);
        }
        
        function updatePhysics() {
            gameState.balls.forEach(ball => {
                ball.x += ball.vx;
                ball.y += ball.vy;
                ball.vx *= 0.985;
                ball.vy *= 0.985;
                
                if (Math.abs(ball.vx) < 0.01) ball.vx = 0;
                if (Math.abs(ball.vy) < 0.01) ball.vy = 0;
                
                // Wall bounce
                if (ball.x < ball.r || ball.x > canvas.width - ball.r) ball.vx *= -0.8;
                if (ball.y < ball.r || ball.y > canvas.height - ball.r) ball.vy *= -0.8;
                
                ball.x = Math.max(ball.r, Math.min(canvas.width - ball.r, ball.x));
                ball.y = Math.max(ball.r, Math.min(canvas.height - ball.r, ball.y));
            });
            
            // Ball collisions
            for (let i = 0; i < gameState.balls.length; i++) {
                for (let j = i + 1; j < gameState.balls.length; j++) {
                    const b1 = gameState.balls[i];
                    const b2 = gameState.balls[j];
                    const dx = b2.x - b1.x;
                    const dy = b2.y - b1.y;
                    const dist = Math.sqrt(dx*dx + dy*dy);
                    
                    if (dist < b1.r + b2.r) {
                        const angle = Math.atan2(dy, dx);
                        const sin = Math.sin(angle);
                        const cos = Math.cos(angle);
                        
                        const vx1 = b1.vx * cos + b1.vy * sin;
                        const vy1 = b1.vy * cos - b1.vx * sin;
                        const vx2 = b2.vx * cos + b2.vy * sin;
                        const vy2 = b2.vy * cos - b2.vx * sin;
                        
                        const finalVx1 = vx2 * 0.9;
                        const finalVx2 = vx1 * 0.9;
                        
                        b1.vx = finalVx1 * cos - vy1 * sin;
                        b1.vy = vy1 * cos + finalVx1 * sin;
                        b2.vx = finalVx2 * cos - vy2 * sin;
                        b2.vy = vy2 * cos + finalVx2 * sin;
                        
                        const overlap = (b1.r + b2.r - dist) / 2;
                        b1.x -= overlap * cos;
                        b1.y -= overlap * sin;
                        b2.x += overlap * cos;
                        b2.y += overlap * sin;
                    }
                }
            }
        }
        
        function render() {
            ctx.fillStyle = '#0d5c3b';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Draw pockets
            const pockets = [[50,50], [canvas.width/2,40], [canvas.width-50,50], [50,canvas.height-50], [canvas.width/2,canvas.height-40], [canvas.width-50,canvas.height-50]];
            pockets.forEach(p => {
                ctx.beginPath();
                ctx.arc(p[0], p[1], 20, 0, Math.PI*2);
                ctx.fillStyle = '#000';
                ctx.fill();
            });
            
            // Draw balls
            gameState.balls.forEach(ball => {
                ctx.beginPath();
                ctx.arc(ball.x, ball.y, ball.r, 0, Math.PI*2);
                
                if (ball.type === 'cue') ctx.fillStyle = '#fff';
                else if (ball.type === 'eight') ctx.fillStyle = '#000';
                else {
                    const colors = ['#ff0000', '#ff6600', '#ffff00', '#00ff00', '#0000ff', '#6600ff', '#ff00ff'];
                    ctx.fillStyle = colors[(ball.number - 1) % 7];
                }
                ctx.fill();
                
                if (ball.number > 0) {
                    ctx.fillStyle = ball.type === 'eight' ? '#fff' : '#000';
                    ctx.font = 'bold 12px Arial';
                    ctx.textAlign = 'center';
                    ctx.fillText(ball.number, ball.x, ball.y + 4);
                }
            });
            
            // Draw aim line
            if (gameState.cueBall && (gameState.cueBall.vx === 0 && gameState.cueBall.vy === 0)) {
                ctx.beginPath();
                ctx.moveTo(gameState.cueBall.x, gameState.cueBall.y);
                ctx.lineTo(
                    gameState.cueBall.x + Math.cos(gameState.aimAngle) * 100,
                    gameState.cueBall.y + Math.sin(gameState.aimAngle) * 100
                );
                ctx.strokeStyle = 'rgba(255,255,255,0.5)';
                ctx.setLineDash([5, 5]);
                ctx.stroke();
                ctx.setLineDash([]);
            }
        }
        
        // Initialize
        socket.emit('register', { username: 'Player_' + Math.floor(Math.random()*10000) });
    </script>
</body>
</html>
'''

